{
  "compilerOptions": {
    "target": "ES2020",
    "module": "EsNext",
    "moduleResolution": "Node",
    "rootDir": "./bot/src",
    "outDir": "./bot/dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["bot/src/**/*"]
}
